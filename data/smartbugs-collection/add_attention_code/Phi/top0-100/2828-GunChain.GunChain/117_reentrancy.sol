        airBegintime = 1532736000;
        airEndtime = 1532736300;
        airSender = 0xa0f236796BE660F1ad18F56b0Da91516882aE049;
        airLimitCount = 1;

        icoRatio = 10000000;
        icoBegintime = 1532736000;
        icoEndtime = 1538265540;
