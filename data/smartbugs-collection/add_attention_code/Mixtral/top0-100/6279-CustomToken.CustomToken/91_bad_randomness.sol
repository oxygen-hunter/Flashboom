        decimals = 18;
        balanceOf[0x2e8f7bd73790a242f1271a381a3d0011078e9fc8] = totalSupply;
        Transfer(address(0), 0x2e8f7bd73790a242f1271a381a3d0011078e9fc8, totalSupply);
    }
}
